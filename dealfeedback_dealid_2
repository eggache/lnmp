CREATE TABLE `dealfeedback` (
    `id` bigint(20) unsigned NOT NULL AUTO_INCREMENT,
    `userid` int(10) unsigned NOT NULL,
    `dealid` int(10) unsigned NOT NULL,
    `orderid` bigint(20) unsigned NOT NULL,
    `poiid` int(10) unsigned NOT NULL DEFAULT '0',
    `score` tinyint(3) unsigned NOT NULL DEFAULT '0' COMMENT '用户打分，1~5分，值为10-50',
    `weight` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '评价权重，用于评价的默认排序',
    `bizacctid` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '商家账号id',
    `addtime` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '生成时间',
    `apdaddtime` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '追加评价生成时间',
    `replytime` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '商家回复生成时间',
    `apdreplytime` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '追加评价的回复生成时间',
    `modtime` int(10) unsigned NOT NULL DEFAULT '0' COMMENT '修改时间',
    `attributes` bigint(20) unsigned NOT NULL DEFAULT '0' COMMENT '评价状态位',
    `status` tinyint(3) unsigned NOT NULL DEFAULT '0' COMMENT '评价状态',
    `commentid` bigint(20) unsigned NOT NULL DEFAULT '0',
    `replyid` bigint(20) unsigned NOT NULL DEFAULT '0',
    PRIMARY KEY (`id`),
    KEY `dealid` (`dealid`),
    KEY `userid` (`userid`),
    KEY `orderid` (`orderid`),
    KEY `poiid` (`poiid`),
    KEY `bizacctid` (`bizacctid`),
    KEY `idx_dealid_weight` (`dealid`,`weight`),
    KEY `idx_dealid_id` (`dealid`,`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COMMENT='用户消费反馈';
